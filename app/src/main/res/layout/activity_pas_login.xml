<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PasLoginActivity"
    android:background="@color/logocolor3"
    tools:layout_editor_absoluteX="2dp"
    tools:layout_editor_absoluteY="36dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/loginlogo"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="230dp"
        android:layout_marginBottom="12dp"
        android:layout_alignParentTop="true"
        android:elevation="10dp"
        app:cardCornerRadius="40dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/greylogo" />

    </androidx.cardview.widget.CardView>


    <EditText
        android:id="@+id/Pas_login_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginlogo"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="26dp"
        android:background="@drawable/input_design"
        android:hint="Mobile Number"
        android:inputType="text"
        android:padding="20dp"
        android:textColor="@color/cardview_dark_background"
        android:textColorHint="@color/cardview_dark_background"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/Pas_login_pwd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/Pas_login_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/Pas_login_no"
        android:layout_marginBottom="12dp"
        android:background="@drawable/input_design"
        android:hint=" Password"
        android:inputType="textPassword"
        android:padding="20dp"
        android:textColor="@color/cardview_dark_background"
        android:textColorHint="@color/cardview_dark_background"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/remember_me"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/remember_me"
        style="@style/Material.Drawable.CheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="18dp"
        android:gravity="center_vertical"
        android:text="Remember me"
        android:textColor="@color/logocolor"
        android:textSize="16sp"
        android:textStyle="bold"
        app:cbd_strokeColor="@color/logocolor"
        android:layout_below="@+id/Pas_login_pwd"/>


    <Button
        android:id="@+id/pas_login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_password_input"
        android:layout_marginStart="9dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="9dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="22dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/buttonblack"
        android:padding="17dp"
        android:text="Log In"
        android:textAllCaps="false"
        android:textColor="@color/logocolor2"
        android:textSize="18sp"
        tools:ignore="UnknownId" />

    <TextView
        android:id="@+id/forget_password_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginBottom="22dp"
        android:text="Forget Password"
        android:layout_alignParentRight="true"
        android:textColor="@color/logocolor"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_below="@+id/Pas_login_pwd"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>