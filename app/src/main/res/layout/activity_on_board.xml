<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScanQrActivity">

    <Button
        android:id="@+id/scan_qr"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_margin="20dp"
        android:background="@drawable/buttonblack"
        android:padding="17dp"
        android:text="Scan QR Code"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/tv_qr_readTxt1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:layout_below="@+id/scan_qr"
        android:gravity="center"
        android:hint="Please Scan the QR code in front of you"/>

    <Button
        android:id="@+id/report_btn"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:background="@drawable/buttonblack"
        android:padding="17dp"
        android:layout_margin="20dp"
        android:text="Report an Issue"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_below="@+id/tv_qr_readTxt1"/>

    <Button
        android:id="@+id/review_btn"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_margin="20dp"
        android:background="@drawable/buttonblack"
        android:padding="17dp"
        android:text="Review Your Experience"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_below="@+id/report_btn"/>

    <Button
        android:id="@+id/ask_help_btn"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_margin="20dp"
        android:background="@drawable/buttonblack"
        android:padding="17dp"
        android:layout_below="@+id/review_btn"
        android:text="Ask for Help"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <Button
        android:id="@+id/travel_bot_btn"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:background="@drawable/buttonblack"
        android:padding="17dp"
        android:layout_margin="20dp"
        android:layout_below="@+id/ask_help_btn"
        android:text="Travel Bot"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18sp" />
