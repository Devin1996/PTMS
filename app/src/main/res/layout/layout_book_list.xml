<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/search_layout"
    android:padding="10dp"
    app:cardElevation="15dp">


    <TextView
        android:id="@+id/my_travel_list_to_booked_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date"
        android:layout_marginTop="10dp"
        android:textColor="#555555"
        android:layout_below="@+id/my_travel_list_to_booked_seats"
        android:textSize="14dp"
        android:textStyle="bold"
        android:gravity="center"/>



    <TextView
        android:id="@+id/my_travel_list_from"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:text="From"
        android:textColor="#555555"
        android:textSize="14dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/my_travel_list_to"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/my_travel_list_from"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:text="To"
        android:textColor="#555555"
        android:textSize="14dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/my_travel_list_dep_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/my_travel_list_to"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:text="Departutre"
        android:textColor="#555555"
        android:textSize="14dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/my_travel_list_arr_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/my_travel_list_dep_time"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:text="Arrival Time"
        android:textColor="#555555"
        android:textSize="14dp"
        android:textStyle="bold"
        />




    <TextView
        android:id="@+id/my_travel_list_to_booked_seats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/my_travel_list_arr_time"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="No of Seats"
        android:textColor="#555555"
        android:textSize="14dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/travel_confirmed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/my_travel_list_to_booked_date"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Confirmed"
        android:textColor="#1adc00"
        android:textSize="14dp"
        android:textStyle="bold"/>


</RelativeLayout>